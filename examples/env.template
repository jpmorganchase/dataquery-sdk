# DATAQUERY SDK Environment Configuration Template
# Copy this file to .env and update the values as needed
# NEVER commit .env files to version control - they contain sensitive information

# =============================================================================
# REQUIRED CONFIGURATION - Only these are needed to get started!
# =============================================================================

# OAuth Configuration (REQUIRED)
DATAQUERY_CLIENT_ID=your_client_id_here
DATAQUERY_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# OPTIONAL CONFIGURATION - Only set these if you need to override defaults
# =============================================================================

# API Configuration (Pre-configured with JPMorgan defaults)
# Only uncomment/change these if you need different endpoints
# DATAQUERY_BASE_URL=https://api-developer.jpmorgan.com
# DATAQUERY_CONTEXT_PATH=/research/dataquery-authe/api/v2
# DATAQUERY_FILES_BASE_URL=https://api-strm-gw01.jpmchase.com
# DATAQUERY_FILES_CONTEXT_PATH=/research/dataquery-authe/api/v2
# DATAQUERY_OAUTH_TOKEN_URL=https://authe.jpmorgan.com/as/token.oauth2

# Other OAuth Options (defaults work for most cases)
# DATAQUERY_OAUTH_ENABLED=true
# DATAQUERY_OAUTH_AUD=JPMC:URI:RS-06785-DataQueryExternalApi-PROD
# DATAQUERY_GRANT_TYPE=client_credentials

# Bearer Token Configuration (alternative to OAuth)
DATAQUERY_BEARER_TOKEN=your_bearer_token_here
DATAQUERY_TOKEN_REFRESH_THRESHOLD=300

# HTTP Configuration
DATAQUERY_TIMEOUT=30.0
DATAQUERY_MAX_RETRIES=3
DATAQUERY_RETRY_DELAY=1.0

# Connection Pooling
DATAQUERY_POOL_CONNECTIONS=10
DATAQUERY_POOL_MAXSIZE=20

# Rate Limiting
DATAQUERY_REQUESTS_PER_MINUTE=300
DATAQUERY_BURST_CAPACITY=20

# Proxy Configuration
DATAQUERY_PROXY_ENABLED=false
DATAQUERY_PROXY_URL=
DATAQUERY_PROXY_USERNAME=
DATAQUERY_PROXY_PASSWORD=
DATAQUERY_PROXY_VERIFY_SSL=true

# Logging
DATAQUERY_LOG_LEVEL=INFO
DATAQUERY_ENABLE_DEBUG_LOGGING=false

# Download Configuration
DATAQUERY_DOWNLOAD_DIR=./downloads
DATAQUERY_CREATE_DIRECTORIES=true
DATAQUERY_OVERWRITE_EXISTING=false

# Batch Download Configuration
DATAQUERY_MAX_CONCURRENT_DOWNLOADS=5
DATAQUERY_BATCH_SIZE=10
DATAQUERY_RETRY_FAILED=true
DATAQUERY_MAX_RETRY_ATTEMPTS=2
DATAQUERY_CREATE_DATE_FOLDERS=true
DATAQUERY_PRESERVE_PATH_STRUCTURE=true
DATAQUERY_FLATTEN_STRUCTURE=false
DATAQUERY_SHOW_BATCH_PROGRESS=true
DATAQUERY_SHOW_INDIVIDUAL_PROGRESS=true
DATAQUERY_CONTINUE_ON_ERROR=true
DATAQUERY_LOG_ERRORS=true
DATAQUERY_SAVE_ERROR_LOG=true
DATAQUERY_USE_ASYNC_DOWNLOADS=true
DATAQUERY_CHUNK_SIZE=8192

# Download Options
DATAQUERY_ENABLE_RANGE_REQUESTS=true
DATAQUERY_SHOW_PROGRESS=true

# Workflow Configuration
DATAQUERY_WORKFLOW_DIR=workflow
DATAQUERY_GROUPS_DIR=groups
DATAQUERY_AVAILABILITY_DIR=availability
DATAQUERY_DEFAULT_DIR=files

# Security
DATAQUERY_MASK_SECRETS=true
DATAQUERY_TOKEN_STORAGE_ENABLED=true
DATAQUERY_TOKEN_STORAGE_DIR=.tokens 